<h1 class="page-header">
	<% if @resultTag.count == 0 %>
		Pas de projet avec le tag <%= link_to(@tagSearch.name,@tagSearch) %>
	<% else %>	
		Tous les projets avec le tag <%= link_to(@tagSearch.name,@tagSearch) %>
	<% end %>
</h1>
	
<% if @resultTag.count() > 0 %>
	<% @resultTag.each do |project| %>
		<h2><%= link_to(project.name,project) %></h2>
		<p>By : <%= link_to(project.author,project.user) %></p>
		<p>Le : <%= project.created_at.strftime("%d-%m-%Y") %></p>
		<hr>
	<% end %>
<% end %>