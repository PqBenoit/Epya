<h1>Listing projects</h1>

<% @projects.each do |project| %>
    <article class="col-md-4">
        <div class="image">
            <%= link_to raw("<img src='/assets/projects/#{project.photo}'>"), project %>
        </div>
        <%= link_to raw("<h1>#{project.name}</h1>"), project %>
        <p>by <%= project.author %></p>
        <p><%= project.description %></p>
    </article>
<% end %>
