<% @projects.each do |project| %>
    <article class="col-md-4 item" style="background-image: url(<%= project.photo %>);">
            <div class="color-overlay"></div>
            <%= link_to project do %>
                <div class="link-div"></div>
            <% end %>
        <div class="text-holder">
            <h1><%= project.name%></h1>
            <div class="project-description">
                <%= raw(project.description[0,100]) %>&nbsp;[...]
            </div>
