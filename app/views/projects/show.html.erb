<h1 class="page-header">
  <%= @project.name %>
</h1>

<p>
  <strong>Auteur du projet : </strong>
  <%= @project.author %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<p>
  <strong>Photo:</strong>
  <img src="<%= @project.photo %>" widht='200' height='175'>
</p>

<p>
  <strong>Tags:</strong>
  <%= @project.tags %>
</p>

<p>
  <strong>Collaborators:</strong>
  <%= @project.collaborators %>
</p>

<p>
  <strong>Followers:</strong>
  <ul>
  <% @followers.each do |f| %>
  	<li>
  		<%= f.email %>
  	</li>
  <% end %>
  <ul>
</p>

<% if user_signed_in? %>
	
	<% if @followers.include?(current_user) %>
		<p>
			Vous suivez ce projet !
		</p>
	<% else %>
		<%= link_to 'S\'abonner', follow_path(@project), :class=>("btn btn-primary") %>
	<% end %>
	<% if @project.user_id == current_user.id %>
  		<%= link_to 'Edit', edit_project_path(@project), :class=>("btn btn-primary") %>
  	<% end %>
  	
<% end %>


